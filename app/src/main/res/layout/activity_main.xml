<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <devsnik.com.findyourflat.customui.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find your flat"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_20ssp"
            app:fontName="@string/font_roboto_bold" />


        <ImageView
            android:alpha="0.6"
            android:id="@+id/img_search"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/img_filter"
            android:src="@drawable/ic_search_black_24dp" />

        <ImageView
            android:alpha="0.6"
            android:layout_centerVertical="true"
            android:id="@+id/img_filter"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_filter_tool_black_shape" />

    </RelativeLayout>

    <devsnik.com.findyourflat.customui.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="55 result in yours area"
        app:fontName="@string/font_roboto_bold" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/rl_aprtment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>