<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_ly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_230sdp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7" />

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_2sdp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/row_img"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_230sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/a" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/ll1"
        android:layout_alignBottom="@+id/ll1"
        android:gravity="top">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_2sdp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <devsnik.com.findyourflat.customui.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$5000 /"
                            android:id="@+id/row_price"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_12ssp"
                            app:fontName="@string/font_roboto_bold" />

                        <devsnik.com.findyourflat.customui.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="month"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_10ssp"
                            app:fontName="@string/font_roboto_bold" />

                    </LinearLayout>


                    <devsnik.com.findyourflat.customui.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Double family house"
                        android:textSize="@dimen/_9ssp"
                        app:fontName="@string/font_roboto_regular" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <RatingBar
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:rating="4" />

                        <devsnik.com.findyourflat.customui.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:text="142 review"
                            android:id="@+id/row_review"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_9ssp"
                            android:textStyle="bold"
                            app:fontName="@string/font_roboto_regular" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/p" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:src="@drawable/q" />

                        <devsnik.com.findyourflat.customui.CustomTextView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:background="@drawable/round_bg"
                            android:gravity="center"
                            android:text="+42"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_9ssp"
                            android:textStyle="bold"
                            app:fontName="@string/font_roboto_regular" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp">

                        <devsnik.com.findyourflat.customui.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/tag_bg"
                            android:gravity="center"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_3sdp"
                            android:text="WiFi"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_9ssp"
                            app:fontName="@string/font_roboto_regular" />

                        <devsnik.com.findyourflat.customui.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@drawable/tag_bg"
                            android:gravity="center"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_3sdp"
                            android:text="A.C"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_9ssp"
                            app:fontName="@string/font_roboto_regular" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp">

                        <devsnik.com.findyourflat.customui.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/tag_bg"
                            android:gravity="center"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_3sdp"
                            android:text="Club"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/_9ssp"
                            app:fontName="@string/font_roboto_regular" />

                    </LinearLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:paddingBottom="@dimen/_10sdp">

            <devsnik.com.findyourflat.customui.CustomTextView
                android:layout_width="wrap_content"
                android:id="@+id/row_name"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/img_navigation"
                android:text="Hiloom Apartment"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15ssp"
                app:fontName="@string/font_roboto_bold" />

            <ImageView
                android:id="@+id/img_navigation"
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:alpha="0.6"
                android:background="@drawable/round_bg"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_navigation_black_24dp" />

            <ImageView
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_navigation_black_24dp" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>